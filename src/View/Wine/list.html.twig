{% extends "Shared/admin.html.twig" %}

{% block content %}
	<main class="container">
		<div class="row">
			<h1 class="text-center m-5">Liste des super produits !</h1>
		</div>

		<div class="container d-flex flex-column">
			<table class="table col align-self-center">
				<thead>
					<tr>
						<th>Nom du produit</th>
						<th>Modifier</th>
						<th>Supprimer</th>
						<th>Best-seller</th>
						<th>Ajouter Best-seller</th>

					</tr>
				</thead>
				<tbody>

					{% for wine in wines %}
						<tr>
							<td>
								<a href="/wines/show?id={{ wine.id }}">{{ wine.name }}</a>
							</td>
							<td>
								<a class="btn btn-xl align-self-center" href="/wines/edit?id={{wine.id}}" role="button">
									<i class="bi bi-pencil-fill"></i>
								</a>
							</td>
							<td>
								<form action="/wines/delete" method="POST">
									<input type="hidden" name="id" value="{{ wine.id }}">
									<button class="btn btn-xl align-self-center" role="button">
										<i class="bi bi-trash3-fill"></i>
									</button>
								</form>
							</td>
							<td>
								{% if wine.favorite == 1 %}Oui{% else %}Non
								{% endif %}

							</td>
							<td>

								<form action="/wines/togglesuper" method="POST">
									<input type="hidden" name="id" value="{{ wine.id }}">
									<button>Mettre en avant</button>
								</form>
							</td>
						</tr>
					{% endfor %}

				</tbody>
			</table>
			<div class="col align-self-center">
				<button>
					<a href="/wines/add">Ajouter un produit</a>
				</button>
			</div>
		</div>
	</main>

{% endblock %}
