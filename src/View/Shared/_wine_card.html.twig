{% for wine in wines %}
	<div {% if loop.first %} class="carousel-item active" {% else %} class="carousel-item" {% endif %}>
		<div class=" card-image-top bg-light rounded-5 " style="background-image: url({{wine.image}})"></div>
		<div class="card-body d-flex flex-column">
			<h3 class="card-title text-center mt-4 mb-2">
				<strong>{{wine.name}}</strong>
			</h3>
			<div class="d-flex flex-wrap mt-5 p-2">
				<span class="color rounded m-3 p-2">
					Vin
					{{wine.color}}</span>
				<span class="year rounded m-3 p-2">
					{{wine.year}}</span>
				<span class="region rounded m-3 p-2">
					{{wine.region}}</span>
				<span class="grape rounded m-3 p-2">
					{{wine.grape}}</span>
			</div>
			<div class="d-flex justify-content-center">
				<span class="price fs-2 p-1">
					{{wine.price}}€</span>
			</div>

			<button class="align-self-center mb-3 mt-3 mx-5">
				<a href="/onePartner?id={{wine.partner_id}}">Détails</a>
			</button>
		</div>
	</div>
{% endfor %}
