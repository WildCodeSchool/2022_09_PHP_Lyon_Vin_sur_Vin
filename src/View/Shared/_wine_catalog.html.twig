	<div class=" h-100 d-flex flex-column justify-content-between ">
		<div class=" card-image-top bg-light rounded-5 " style="background-image: url( {{wine.image}} )"></div>
		<div class="card-body d-flex flex-column justify-content-between ">
			<h3 class="card-title text-center fs-4 my-2 h3_card_catalog">
				<strong>{{wine.name}}</strong>
			</h3>
			<h4 class=" color_text card-subtitle text-center px-3 my-2 ">

				{{wine.price}}€</h4>
			<h4 class=" color_text card-subtitle text-center px-3 my-2 ">

				{{wine.year}}</h4>

			<button class="button align-self-center align-item-end my-2  mx-5 p-2" data-bs-toggle="modal" data-bs-target="#modal{{wine.id}}">Détails</button>
		</div>
	</div>
</div>
