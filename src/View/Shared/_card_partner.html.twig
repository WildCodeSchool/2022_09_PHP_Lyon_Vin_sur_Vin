<div class="card mb-3 p-2 col-md-10 container d-flex flex-column">
	<div class="row g-0 justify-content-start">
		<div class="col-md-3">
			<img src="/assets/images/PhotoDamien.png" class="img-fluid rounded-start" alt="photoDamienBroyer">
		</div>
		<div class="col-md-8">
			<div class="card-body row justify-content-end">
				<h5 class="card-title fw-bold">{{partner.firstname}}
					{{partner.lastname}}</h5>
				<p class="card-text">Description :
					{{partner.description}}</p>
				<p class="card-text">{{partner.address}}</p>
				<p class="card-text">{{partner.email}}</p>
				<p class="card-text">{{partner.phone}}</p>
				{% if partnersForUser %}
					<button class="col-4 p-1">
						<a class="fs-5" href="/onePartner?id={{partner.id}}">Voir mes produits</a>
					</button>
				{% endif %}
			</div>
		</div>
	</div>
</div>
