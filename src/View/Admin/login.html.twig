{% extends 'layout.html.twig' %}

{% block content %}
	<div class="row">
		<div class="col-md-6 offset-md-3">
			<h1 class="p-3">Se connecter</h1>
		</br>
		<p>Entrez vos identifiants dans le formulaire qui suit :</p>
		<form method="post">
			<div class="mb-3">
				<label for="email" class="form-label">Email</label>
				<input type="email" class="form-control" id="email" name="email">
				{% if errors %}
					<div class="errors">
						{{errors.email}}<br>
						{{errors.empty_email}}<br>
					</div>
				{% endif %}
			</div>
			<div class="mb-3">
				<label for="password" class="form-label">Mot de passe</label>
				<input type="password" class="form-control" id="password" name="password">
				{% if errors %}
					<div class="errors">
						{{errors.empty_password}}<br>
						{{errors.password_length}}<br>
					</div>
				{% endif %}
			</div>
			<button type="submit" class="button">Se connecter</button>
			{% if errors %}
				<div class="errors">
					{{errors.wrong}}<br>
				</div>
			{% endif %}
		</form>
	</div>
</div>{%  endblock %}
