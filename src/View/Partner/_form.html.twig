<div class="container d-flex">
	<form method="post" class="row gy-3 justify-content-center my-5">

		<input type="hidden" value="{{ partner.id }}" name="id">

		<div class="col-md-5 col-sm-8 col-xs-8">
			<label for="lastname">Nom :</label><br>
			<input type="text" class="form-control" value="{{ partner.lastname }}" name="lastname" id="lastname">
		</div>

		<div class="col-md-5 col-sm-8 col-xs-8">

			<label for="firstname">Prénom :</label><br>
			<input type="text" class="form-control" value="{{ partner.firstname }}" name="firstname" id="firstname">
		</div>

		<div class="col-md-5 col-sm-8 col-xs-8">
			<label for="email">Email :</label><br>
			<input type="email" class="form-control" value="{{ partner.email }}" name="email" id="email">
		</div>

		<div class="col-md-5 col-sm-8 col-xs-8">
			<label for="phone">Téléphone :</label><br>
			<input type="tel" class="form-control" value="{{ partner.phone }}" name="phone" id="phone">
		</div>

		<div class="col-10">
			<label for="address">Adresse :</label><br>
			<input type="text" class="form-control" value="{{ partner.address }}" name="address" id="address">
		</div>

		<div class="col-10">
			<label for="description">Description :</label><br>
			<textarea name="description" class="form-control" value="{{ partner.description }}" id="description" rows=" 10" cols=" 50"></textarea>
		</div>
		<div class="button d-flex justify-content-center align-self-center" id="addbutton">
			<button>Envoyer</button>
		</div>
	</form>
</div>
